@using Forum.Common
@model Forum.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
    <h1 class="display-4">@this.ViewData["Title"] </h1>
</div>
<hr />
<form method="post" asp-action="index">
    <div class="input-group">
        <input type="text" class="form-control" name="search" id="search" />
        <div class="input-group-append ">
            <button type="submit" class="btn btn-primary" value="Search">Search</button>
        </div>
    </div>
</form>
<hr />

<div class="container">
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon gliphicon-search"></i></span>
            <input type="text" id="searching" placeholder="search" class="form-control" />
        </div>
    </div>
</div>

<hr />

<div class="row">
    @foreach (var category in Model.Categories)
    {
        <div class="col-md-4 media searching">
            <img src="@category.ImageUrl" width="100" height="100" class="mr-3" alt="@category.Title">
            <div class="media-body">
                <h5 class="mt-0">
                    <a href="@category.Url">@category.Title (@category.PostsCount)</a>
                    @category.Description
            </div>
        </div>
    }
</div>
